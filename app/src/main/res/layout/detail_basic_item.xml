<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/detailBasicLL"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_gravity="top|left"
        android:background="@drawable/border"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:id="@+id/detailAddrTelLL"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="30px"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="40px"
                android:layout_marginBottom="20px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewParkingTitleLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="제주대학교 주차장"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="20px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewAddr"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icons8_location_24" />

                <TextView
                    android:id="@+id/textViewParkingAddr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="제주특별자치도 제주시 아라동 제주대학로 102"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="20px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewTel"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icons8_phone_24" />

                <TextView
                    android:id="@+id/textViewParkingTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="064-777-7777"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewHomepage"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icons8_home_24" />

                <TextView
                    android:id="@+id/textViewParkingHomepage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="http://www.jejuuniv.co.kr"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="5px"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/transferLL"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewTrans"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icons8_right_2_24" />

                <TextView
                    android:id="@+id/textViewTransLabel"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="전달"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spacer1LL"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/roadViewLL"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewRoad"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icons8_road_24" />

                <TextView
                    android:id="@+id/textViewRoadLabel"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="로드뷰"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spacer2LL"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/naviLL"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewNavi"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icons8_compass_24" />

                <TextView
                    android:id="@+id/textViewNaviLabel"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="내비"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/detailTotalCount"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="30px"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="40px"
                android:layout_marginBottom="20px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewParkingTotalCountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="주차면수"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp">

                        <TextView
                            android:id="@+id/tvTableSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="소형"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginRight="4dp"
                            android:background="#000000" />

                        <TextView
                            android:id="@+id/tvTableMiddle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="중형"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginRight="4dp"
                            android:background="#000000" />

                        <TextView
                            android:id="@+id/tvTableBig"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="대형"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginRight="4dp"
                            android:background="#000000"/>

                        <TextView
                            android:id="@+id/tvTableElec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="전기"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginRight="4dp"
                            android:background="#000000"/>

                        <TextView
                            android:id="@+id/tvTableHand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="장애"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginRight="4dp"
                            android:background="#000000"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvTableSmallCont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="25"
                            android:textSize="12sp"
                            android:layout_marginRight="4dp"
                            android:background="#E7E1EF"/>

                        <TextView
                            android:id="@+id/tvTableMiddleCont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="20"
                            android:textSize="12sp"
                            android:layout_marginRight="4dp"
                            android:background="#E7E1EF"/>

                        <TextView
                            android:id="@+id/tvTableBigCont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="10"
                            android:textSize="12sp"
                            android:layout_marginRight="4dp"
                            android:background="#E7E1EF"/>

                        <TextView
                            android:id="@+id/tvTableElecCont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="5"
                            android:textSize="12sp"
                            android:layout_marginRight="4dp"
                            android:background="#E7E1EF"/>

                        <TextView
                            android:id="@+id/tvTableHandCont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="5"
                            android:textSize="12sp"
                            android:layout_marginRight="4dp"
                            android:background="#E7E1EF"/>
                    </TableRow>

                </TableLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
