<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/detailBasicLL"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_gravity="top|left"

        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:showDividers="middle"
        android:background="@color/ezIvory">

        <LinearLayout
            android:id="@+id/detailAddrTelLL"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="40px"
                android:layout_marginBottom="10px"
                android:orientation="horizontal">

                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_base_height="100"
                    app:scale_base_width="1080">

                    <TextView
                        android:id="@+id/textViewParkingTitleLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanum_gothic_bold"
                        android:text="제주대학교 주차장"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        app:scale_height="100"
                        app:scale_left="45"
                        app:scale_textsize="70"
                        app:scale_top="0"
                        app:scale_width="900" />
                </com.ssomai.android.scalablelayout.ScalableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginBottom="10px"
                android:orientation="horizontal">

                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_base_height="60"
                    app:scale_base_width="1080">

                    <ImageView
                        android:id="@+id/imageViewAddr"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:scale_height="60"
                        app:scale_left="-340"
                        app:scale_textsize="40"
                        app:scale_top="0"
                        app:scale_width="900"
                        app:srcCompat="@drawable/detail_location_icon" />

                    <TextView
                        android:id="@+id/textViewParkingAddr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanum_gothic"
                        android:text="제주특별자치도 제주시 아라동 제주대학로 102"
                        android:textColor="@color/ezGray"
                        android:textSize="20sp"
                        app:scale_height="60"
                        app:scale_left="160"
                        app:scale_textsize="50"
                        app:scale_top="0"
                        app:scale_width="900" />
                </com.ssomai.android.scalablelayout.ScalableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginBottom="10px"
                android:orientation="horizontal">

                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_base_height="60"
                    app:scale_base_width="1080">

                    <ImageView
                        android:id="@+id/imageViewTel"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:scale_height="60"
                        app:scale_left="-340"
                        app:scale_textsize="40"
                        app:scale_top="0"
                        app:scale_width="900"
                        app:srcCompat="@drawable/detail_phone_icon" />

                    <TextView
                        android:id="@+id/textViewParkingTel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanum_gothic"
                        android:text="064-777-7777"
                        android:textColor="@color/ezGray"
                        android:textSize="20sp"
                        app:scale_height="60"
                        app:scale_left="160"
                        app:scale_textsize="50"
                        app:scale_top="0"
                        app:scale_width="900" />
                </com.ssomai.android.scalablelayout.ScalableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_base_height="80"
                    app:scale_base_width="1080">

                    <ImageView
                        android:id="@+id/imageViewHomepage"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:scale_height="60"
                        app:scale_left="-340"
                        app:scale_textsize="40"
                        app:scale_top="0"
                        app:scale_width="900"
                        app:srcCompat="@drawable/detail_home_icon" />

                    <TextView
                        android:id="@+id/textViewParkingHomepage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanum_gothic"
                        android:text="http://www.jejuuniv.co.kr"
                        android:textColor="@color/ezGray"
                        android:textSize="20sp"
                        app:scale_height="60"
                        app:scale_left="160"
                        app:scale_textsize="50"
                        app:scale_top="0"
                        app:scale_width="900" />
                </com.ssomai.android.scalablelayout.ScalableLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/transferLL"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewTrans"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/detail_transfer_icon" />

                <TextView
                    android:id="@+id/textViewTransLabel"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanum_gothic"
                    android:gravity="center"
                    android:text="전달"
                    android:textColor="@color/ezGray"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spacer1LL"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/detail_vertical_divider" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/roadViewLL"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewRoad"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/detail_roadview_icon" />

                <TextView
                    android:id="@+id/textViewRoadLabel"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanum_gothic"
                    android:gravity="center"
                    android:text="로드뷰"
                    android:textColor="@color/ezGray"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spacer2LL"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/detail_vertical_divider" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/naviLL"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewNavi"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/detail_navi_icon" />

                <TextView
                    android:id="@+id/textViewNaviLabel"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanum_gothic"
                    android:gravity="center"
                    android:text="내비"
                    android:textColor="@color/ezGray"
                    android:textSize="17sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/detailTotalCount"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="40px"
                android:layout_marginBottom="20px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewParkingTotalCountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanum_gothic_bold"
                    android:text="주차면수"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1">
<!--
                        <TextView
                            android:id="@+id/tvTableSmall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/cell_shape_header"
                            android:gravity="center"
                            android:text="소형"
                            android:textColor="#545454"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvTableMiddle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="@drawable/cell_shape_header"
                            android:gravity="center"
                            android:text="중형"
                            android:textColor="#545454"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvTableBig"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="@drawable/cell_shape_header"
                            android:gravity="center"
                            android:text="대형"
                            android:textColor="#545454"
                            android:textSize="15sp" />
-->
                        <TextView
                            android:id="@+id/tvTableNormal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/cell_shape_header"
                            android:gravity="center"
                            android:text="일반"
                            android:textColor="#545454"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvTableElec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="@drawable/cell_shape_header"
                            android:gravity="center"
                            android:text="전기"
                            android:textColor="#545454"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvTableHand"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="@drawable/cell_shape_header"
                            android:gravity="center"
                            android:text="장애"
                            android:textColor="#545454"
                            android:textSize="15sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1">
<!--
                        <TextView
                            android:id="@+id/tvTableSmallCont"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:background="@drawable/cell_shape"
                            android:gravity="center"
                            android:text="25"
                            android:textColor="#545454"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvTableMiddleCont"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:background="@drawable/cell_shape"
                            android:gravity="center"
                            android:text="20"
                            android:textColor="#545454"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvTableBigCont"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:background="@drawable/cell_shape"
                            android:gravity="center"
                            android:text="10"
                            android:textColor="#545454"
                            android:textSize="15sp" />
-->
                        <TextView
                            android:id="@+id/tvTableNormalCont"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:background="@drawable/cell_shape"
                            android:gravity="center"
                            android:text="25"
                            android:textColor="#545454"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvTableElecCont"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:background="@drawable/cell_shape"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="#545454"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvTableHandCont"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:background="@drawable/cell_shape"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="#545454"
                            android:textSize="15sp" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
