<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PREFERENCES.PreferencesActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/pre_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="725dp"
        android:layout_below="@+id/pre_toolbar"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/pre_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:onClick="onClickPreVersion"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvPreVersionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nanum_gothic"
                android:text="버전정보"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPreVersionCont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nanum_gothic"
                android:gravity="right"
                android:text="@string/ver"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:onClick="onClickPreTOS"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvPreTOSLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nanum_gothic"
                android:text="이용약관/개인정보취급방침"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPreTOSCont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="" />

            <ImageView
                android:id="@+id/ivPiCarType"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/arrow_r" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:onClick="onClickPreLeaveUser"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvPreLeaveUserLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nanum_gothic"
                android:text="회원탈퇴"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPreLeaveUserCont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="" />

            <ImageView
                android:id="@+id/ivPiCardNo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/arrow_r" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>