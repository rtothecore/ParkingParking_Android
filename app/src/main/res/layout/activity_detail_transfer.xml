<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="200dp">

    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="공유하기"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="53dp" />
    </LinearLayout>
    <!-- //end 타이틀바 -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonByKakaotalk"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ez_button_bg"
            android:fontFamily="@font/nanum_gothic"
            android:onClick="mOnCickByKakaotalk"
            android:text="카카오톡으로 공유"
            android:textColor="#787878"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/buttonBySMS"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ez_button_bg"
            android:fontFamily="@font/nanum_gothic"
            android:onClick="mOnCickBySMS"
            android:text="문자로 공유"
            android:textColor="#787878"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/buttonCopyAddress"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ez_button_bg"
            android:fontFamily="@font/nanum_gothic"
            android:onClick="mOnCickCopyAddress"
            android:text="주소 복사하기"
            android:textColor="#787878"/>
    </LinearLayout>
</LinearLayout>